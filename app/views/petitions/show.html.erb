<p>
  Петиция:
</p>
<p>
  <strong>Title:</strong>
  <%= @petition.title %>
</p>
<p>
<h6><%= @petition.created_at.strftime("%d/%m/%Y %H:%M") %></h6>
</p> 
<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <%= @petition.text %>
    </p>
  </div>
</div>
<p>
<strong>Голосов: <%= @petition.reputation_for(:votes).to_i %> </strong>

</p>
<% if current_user && !current_user.voted_for?(@petition) %>
  <p>
  <%= button_to "Поддержать", vote_petition_path(@petition, type: "up"), method: :post,
  class: 'btn btn-success'%>
  </p>
<% end %>